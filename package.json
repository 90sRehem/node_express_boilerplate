{
  "name": "node-express-template",
  "version": "1.0.0",
  "author": "Jonathan Rehem",
  "license": "MIT",
  "description": "nodejs template with Typescript, DDD and express server.",
  "main": "dist/src/api/server.js",
  "scripts": {
    "start": "node dist/src/api/server.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules --respawn src/api/server.ts",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles",
    "build": "rimraf ./dist && swc src --out-dir dist",
    "lint": "eslint src/** spec/** --fix --cache"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.142",
    "@swc/jest": "^0.2.17",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.18",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "eslint-plugin-import-helpers": "^1.2.1",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "nanoid": "^3.1.30",
    "reflect-metadata": "^0.1.13",
    "shallow-equal-object": "^1.1.1",
    "tsyringe": "^4.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
}
